@Article{Dar2020a,
  author         = {Darsena, Donatella and Gelli, Giacinto and Iudice, Ivan and Verde, Francesco},
  journal        = {Sensors},
  title          = {Separable {MSE}-Based Design of Two-Way Multiple-Relay Cooperative {MIMO} {5G} Networks},
